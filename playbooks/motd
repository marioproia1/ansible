---
- name: Generate MOTD
  hosts: localhost
  gather_facts: false
  become: yes

  tasks:
    - name: Generate MOTD
      set_fact:
        motd: "Hello Mario!"

    - name: Display MOTD
      copy:
        content: "{{ motd }}"
        dest: /etc/motd
        owner: root
        group: root
        mode: '0644'
